<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SeekSphere</title>
    <link rel='stylesheet' href='/stylesheets/search.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <!-- Navbar starts here -->
        <div class="nav-container">
            <nav class="navbar bg-body-tertiary">
                <div class="container-fluid">
                  <a class="navbar-brand"><img src="./images/logo.png" alt="logo"></a>
                  <form class="d-flex" role="search" method="POST" action="/search">
                    <input class="form-control me-2" type="search" name="searchedQuery" placeholder="<%= query %>" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                  </form>
                </div>
            </nav>
        </div>
        <!-- Navbar ends here -->

        <!-- Results starts here -->
        <div class="results-container mt-5">
            <div class="row row-cols-1 row-cols-md-3 g-4" id="results-cards">
                <% if (data.items && data.items.length > 0) { %>
                    <% data.items.forEach(function(item) { %>
                    <div class="col">
                        <a href="<%= item.link %>">
                            <div class="card h-100">
                                <% if (item.pagemap && item.pagemap.cse_thumbnail && item.pagemap.cse_thumbnail.length > 0) { %>
                                    <!-- Set fixed dimensions for the image -->
                                    <img src="<%= item.pagemap.cse_thumbnail[0].src %>" class="card-img-top" alt="...">
                                <% } else { %>
                                    <!-- Placeholder image or alternative content if thumbnail is not available -->
                                    <img src="https://placehold.co/600x400?text=NO+IMAGE" class="card-img-top" alt="...">
                                <% } %>
                                <div class="card-body">
                                    <!-- Set fixed dimensions for the content -->
                                    <h5 class="card-title"><%= item.title %></h5>
                                    <p class="card-text"><%= item.snippet %></p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <% }); %>
                <% } else { %>
                    <p id="no-results">No results found</p>
                <% } %>
            </div>
        </div>
        <!-- Results ends here -->

        <!-- Footer starts here -->
        <div class="footer-container">
            <div class="social-icons">
                <ul>
                  <li><a href="https://www.linkedin.com/in/naved-uddin-800241195/" target="_blank"><i class="fa-brands fa-linkedin icons"></i></a></li>
                  <li><a href="https://github.com/Naved-Uddin9950/" target="_blank"><i class="fa-brands fa-github icons"></i></a></li>
                  <li><a href="https://www.instagram.com/_n_a_v_e_d_99/" target="_blank"><i class="fa-brands fa-instagram icons"></i></a></li>
                  <li> <a href="https://leetcode.com/naveduddin83/" target="_blank"><i class="fa-solid fa-code icons"></i></a></li>
                </ul>
            </div>
    
            <div class="copyright">
              <i class="fa-regular fa-copyright"></i> 2024 SeekSphere | All Rights Reserved
            </div>
        </div>
        <!-- Footer ends here -->
    </div>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/8e0a766b60.js" crossorigin="anonymous"></script>
    <script src="./javascripts/search.js"></script>
</body>
</html>